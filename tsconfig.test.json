{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "composite": true,

    "types": ["vitest"],
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@content/*": ["src/content/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@lib/*": ["src/lib/*"],
      "@test/*": ["tests/*"]
    }
  },
  "include": ["**/*.test.ts"]
}
