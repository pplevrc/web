---
import PageHeading from "@components/decoratives/Headings/PageHeading.astro";
import CastListNavigator from "@components/pages/cast/CastListNavigator/CastListNavigator.astro";
import Layout from "@layouts/Layout.astro";
import { fetchPageThumbnailImage } from "@lib/contents/assets";

const headerImage = await fetchPageThumbnailImage("casts");

// 末尾の Query Parameter を削除した src 文字列 (thumbnail.src は debug mode では URL ではない)
const ogp = headerImage.src.split("?")[0];
---

<Layout
  headMeta={{
    title: "店員さん一覧 | ロリっ子喫茶ぷぷりえ",
    description: "ロリっ子喫茶ぷぷりえの店員さん一覧です.",
    keywords: [],
    ogp,
  }}
>
  <PageHeading img={headerImage}> ぷぷりえ店員さん一覧 </PageHeading>
  <CastListNavigator />
</Layout>
