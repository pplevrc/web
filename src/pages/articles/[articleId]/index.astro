---
import Layout from "@layouts/Layout.astro";
import { fetchArticleIds } from "@lib/contents/articles";

export async function getStaticPaths() {
  const articleIds = await fetchArticleIds();

  return articleIds.map((articleId) => ({
    params: { articleId },
  }));
}

const articleTitle = "お知らせタイトル";

const description = "お知らせの概要";

const keywords = ["お知らせ", "ロリっ子喫茶ぷぷりえ", "お知らせタイトル"];
---

<Layout
  headMeta={{
    title: `${articleTitle} | ロリっ子喫茶ぷぷりえ`,
    description,
    keywords,
  }}
>
  article
</Layout>
