---
import type { HTMLAttributes } from "astro/types";
import Large from "./large/Large.astro";
import Medium from "./medium/Medium.astro";
import type { CommonProps } from "./type";

interface Props extends CommonProps, HTMLAttributes<"figure"> {
  size: "medium" | "large";
}

const { size, ...avatarImageProps } = Astro.props;

const Component = {
  medium: Medium,
  large: Large,
}[size];
---

<Component {...avatarImageProps} />
