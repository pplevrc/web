---
import { Picture } from "astro:assets";
import type { Avatar } from "@content/casts";

type Type = keyof Avatar["images"];

type AvatarPositionType = "fullBody" | "bustUp";

interface Props {
  avatar: Avatar;
  position: AvatarPositionType;
  type: Type;
  alt: string;
}

const { avatar, type, alt } = Astro.props;

const src = avatar.images[type];
// const height = avatar.height;
---

<Picture src={src} alt={alt} />
