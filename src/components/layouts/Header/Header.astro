---
import { css } from "@styles/css";
import HeaderNav from "./internals/HeaderNav.astro";

const headerStyle = css({
  bg: "white",
  h: "14",
  shadow: "xs",

  position: "sticky",
  top: "0",

  _after: {
    bgGradient: "latte.dashed",
    bgSize: "[2rem]",

    content: '""',
    position: "absolute",
    top: "12",
    display: "block",
    overflow: "visible",
    h: "1",
    w: "full",
  },
});
---

<header class={headerStyle}>
  <HeaderNav class={css({ w: "screen" })} />
</header>
