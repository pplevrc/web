---
import sourceMP4ForPc from "@assets/videos/top-pc.generated.mp4";
// import sourceWebMForPc from "@assets/videos/top-pc.generated.webm";
import sourceMP4ForSp from "@assets/videos/top-sp.generated.mp4";
import poster from "@assets/videos/top.generated.png";
// import sourceWebMForSp from "@assets/videos/top-sp.generated.webm";
import ResponsiveVideo from "@components/commons/ResponsiveVideo.astro";

const props = Astro.props;
---

<ResponsiveVideo
  muted
  autoplay
  playsInline
  disableRemotePlayback
  loop
  poster={poster.src}
  sources={{
    mp4: {
      pc: sourceMP4ForPc,
      sp: sourceMP4ForSp,
    },
  }}
  {...props}
/>
