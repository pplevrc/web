---
import SocialLink from "@components/decoratives/Links/SocialLink/SocialLink.astro";
import type { SocialLink as SocialLinkType } from "@lib/contents/commons/SocialLink";
import { css } from "@styles/css";
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"nav"> {
  links: SocialLinkType[];

  label?: string;
}

const { links, label, ...rest } = Astro.props;

const listStyle = css({
  display: "flex",
  flexDirection: "row",
  alignItems: "center",
  justifyContent: "left",
  gap: {
    base: "2",
    _pc: "4",
  },
  transform: "[rotate(-1deg)]",
});
---

<nav {...rest} aria-label={label}>
  <ul class={listStyle}>
    {
      links.map((link) => (
        <li>
          <SocialLink {...link} />
        </li>
      ))
    }
  </ul>
</nav>
