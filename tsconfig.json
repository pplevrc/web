{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"exactOptionalPropertyTypes": false,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@layouts/*": ["src/layouts/*"],
			"@styles/*": ["src/styles/*"],
			"@lib/*": ["src/lib/*"],
			"#test/*": ["tests/*"]
		}
	},
	"exclude": ["**/*.test.ts"]
}
