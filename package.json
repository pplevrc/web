  "type": "module",
  "scripts": {
    "prepare": "panda codegen && panda && yarn prepare:template && yarn prepare:video",
    "prepare:template": "jiti ./lib/prepare/sources/template.ts",
    "prepare:video": "jiti ./lib/prepare/assets/videos/transport.ts",
    "dev": "yarn prepare && concurrently \"yarn dev:panda\" \"yarn dev:astro\"",
    "dev:panda": "panda -w",
    "dev:astro": "astro dev",
    "dev:test": "vitest --ui",
    "build": "yarn build:panda && yarn build:astro",
    "build:prepare": "NODE_ENV=production yarn prepare",
    "build:panda": "panda --minify",
    "build:astro": "astro check && astro build",
    "test": "vitest",
    "test:ci": "vitest --ci",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@ffmpeg/core-mt": "^0.12.6",
    "@pandacss/dev": "^0.53.4",
    "@types/ejs": "^3.1.5",
    "astro": "^5.7.4",
    "defu": "^6.1.4",
    "ejs": "^3.1.10",
    "globby": "^14.1.0",
    "is-wsl": "^3.1.0",
    "jiti": "^2.4.2",
    "ohash": "^2.0.11",
    "sharp": "^0.34.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@vitest/ui": "^3.1.1",
    "concurrently": "^9.1.2",
    "lefthook": "^1.11.10",
    "vitest": "^3.1.1"
  },
