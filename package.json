  "type": "module",
  "scripts": {
    "prepare": "panda codegen && panda && yarn prepare:video",
    "prepare:video": "NODE_OPTIONS=--max_old_space_size=10240 jiti ./lib/prepare/assets/videos/transport.ts",
    "dev": "NODE_ENV=development yarn prepare && concurrently \"yarn dev:panda\" \"yarn dev:astro\"",
    "dev:panda": "panda -w",
    "dev:astro": "astro dev",
    "dev:test": "vitest --ui",
    "build": "yarn build:prepare && yarn build:panda && yarn build:astro",
    "build:prepare": "NODE_ENV=production yarn prepare",
    "build:panda": "panda --minify",
    "build:astro": "astro check && astro build",
    "test": "vitest",
    "test:ci": "vitest --ci",
    "preview": "astro preview",
    "astro": "astro"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/sitemap": "^3.4.0",
    "@biomejs/biome": "^1.9.4",
