    "@tsconfig/strictest": "^2.0.5",
    "@vitest/ui": "^3.1.1",
    "astro": "^5.7.4",
    "concurrently": "^9.1.2",
    "defu": "^6.1.4",
    "dotenv": "^16.5.0",
    "globby": "^14.1.0",
    "happy-dom": "^17.4.4",
    "is-wsl": "^3.1.0",
    "jiti": "^2.4.2",
    "lefthook": "^1.11.10",
    "lightningcss": "^1.25.1",
    "media-codecs": "^2.0.2",
    "mediainfo.js": "^0.3.5",
    "ohash": "^2.0.11",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "sharp": "^0.34.1",
    "typescript": "^5.8.3",
    "unified": "^11.0.5",
    "vitest": "^3.1.1"
  },
  "packageManager": "yarn@4.5.0",
  "volta": {
    "node": "22.11.0",
